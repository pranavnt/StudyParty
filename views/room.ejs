<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <script>
      const ROOM_ID = "<%= roomId %>";
    </script>
    <script
      defer
      src="https://unpkg.com/peerjs@1.2.0/dist/peerjs.min.js"
    ></script>
    <script src="/socket.io/socket.io.js" defer></script>
    <script src="script.js" defer></script>
    <title>My Room</title>
    <style>
      #video-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, 30vh);
        grid-auto-rows: 20vh;
        float: right;
      }

      video {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }
    </style>

    <style>
      html,
      body,
      .grid-container {
        height: 100%;
        margin: 0;
      }

      .grid-container {
        display: grid;
        grid-template-columns: 1fr 1fr 1fr 1fr;
        grid-template-rows: 1fr 1fr 1fr;
        gap: 1px 1px;
        grid-template-areas: "videoDiv videoDiv videoDiv videosDiv" "videoDiv videoDiv videoDiv videosDiv" "videoDiv videoDiv videoDiv videosDiv";
      }

      .videosDiv {
        grid-area: videosDiv;
        overflow-y: auto;
      }

      .videoDiv {
        grid-area: videoDiv;
      }
    </style>

    <style>
      * {
        box-sizing: border-box;
      }

      /* Set height of body and the document to 100% */
      body,
      html {
        height: 100%;
        margin: 0;
        font-family: Arial;
      }

      /* Style tab links */
      .tablink {
        background-color: #555;
        color: white;
        float: left;
        border: none;
        outline: none;
        cursor: pointer;
        padding: 14px 16px;
        font-size: 17px;
        width: 33.333333%;
      }

      .tablink:hover {
        background-color: #777;
      }

      /* Style the tab content (and add height:100% for full page content) */
      .tabcontent {
        color: black;
        display: none;
        padding: 100px 20px;
        height: 100%;
      }

      #Textbook {
        background-color: #f1f1f1;
      }
      #Quizlet {
        background-color: #f1f1f1;
      }
      #Khan Academy {
        background-color: #f1f1f1;
      }
      #About {
        background-color: #f1f1f1;
      }
    </style>

    <script>
      function openPage(pageName, elmnt, color) {
        var i, tabcontent, tablinks;
        tabcontent = document.getElementsByClassName("tabcontent");
        for (i = 0; i < tabcontent.length; i++) {
          tabcontent[i].style.display = "none";
        }
        tablinks = document.getElementsByClassName("tablink");
        for (i = 0; i < tablinks.length; i++) {
          [i].style.backgroundColor = "#f1f1f1";
        }
        document.getElementById(pageName).style.display = "block";
        elmnt.style.backgroundColor = "#f1f1f1";
      }

      // Get the element with id="defaultOpen" and click on it
      document.getElementById("defaultOpen").click();
    </script>
    <script>
      function constructURL(embedCode, type) {
        return (
          "https://quizlet.com/" + embedCode + "/" + type + "/embed?x=1jj1"
        );
      }
    </script>
  </head>
  <body>
    <div class="grid-container">
      <div class="videosDiv">
        <div id="video-grid"></div>
      </div>
      <div class="videoDiv" style="background-color: #f1f1f1">
        <button class="tablink" onclick="openPage('Textbook', this, '#c1c1c1')">
          Textbook
        </button>
        <button
          class="tablink"
          onclick="openPage('Quizlet', this, '#c1c1c1')"
          id="defaultOpen"
        >
          Quizlet
        </button>
        <button
          class="tablink"
          onclick="openPage('Khan Academy', this, '#c1c1c1')"
        >
          Khan Academy
        </button>

        <div id="Textbook" class="tabcontent">
          <iframe
            src="https://firebasestorage.googleapis.com/v0/b/studyparty-d1ea0.appspot.com/o/Campbell's%20Biology%20in%20Focus.pdf?alt=media&token=70b8e816-4ca6-444e-a34e-bcf46c9d6530"
            style="width: 100%; height: 87vh"
          ></iframe>
        </div>

        <div id="Quizlet" class="tabcontent">
          <iframe src="" style="width: 100%"></iframe>
        </div>

        <div id="Khan Academy" class="tabcontent">
          <iframe
            src="https://www.youtube.com/embed/videoseries?list=PL0E278E6CA0A3DD5B"
            style="width: 100%; height: 87vh"
          >
            ></iframe
          >
        </div>
      </div>
      <script>
        function openPage(pageName, elmnt, color) {
          var i, tabcontent, tablinks;
          tabcontent = document.getElementsByClassName("tabcontent");
          for (i = 0; i < tabcontent.length; i++) {
            tabcontent[i].style.display = "none";
          }
          tablinks = document.getElementsByClassName("tablink");
          for (i = 0; i < tablinks.length; i++) {
            tablinks[i].style.backgroundColor = "";
          }
          document.getElementById(pageName).style.display = "block";
          elmnt.style.backgroundColor = color;
        }

        // Get the element with id="defaultOpen" and click on it
        document.getElementById("defaultOpen").click();
      </script>
    </div>
  </body>
</html>
